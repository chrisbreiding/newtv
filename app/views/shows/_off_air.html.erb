<% if !off_air.empty? %>

	<h2>Off Air</h2>

	<ul class="off-air">
		<% off_air.each do |show| %>
			<li class="show-<%= show.id %> show" data-id="<%= show.id %>" data-name="<%= show.name %>">
				<%= content_tag :span do %>
					<%= content_tag :span, show.name, class: 'name' %>
					<%= options show if user_signed_in? %>
				<% end %>
			</li>
		<% end %>
	</ul>

<% end %>
