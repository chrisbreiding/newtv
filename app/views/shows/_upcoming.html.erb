<div class="upcoming-shows">
  <% upcoming.each do |show| %>
    <div class="show-<%= show.id %> show clearfix" data-id="<%= show.id %>" data-name="<%= show.name %>">

      <h2>
        <%= content_tag :span, show.name, class: 'name' %>
        <%= options show if user_signed_in? %>
      </h2>

      <ul>
        <%= render show.episodes %>
      </ul>

    </div>
  <% end %>
</div>
