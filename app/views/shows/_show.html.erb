<div class="show-<%= show.id %> show clearfix" data-id="<%= show.id %>" data-name="<%= show.name %>">

  <h3>
    <span class="name-wrap">
      <span class="name"><%= show.name %></span>
      <%= render 'options', show: show if user_signed_in? %>
    </span>
  </h3>

  <ul>
    <%= render show.episodes %>
  </ul>

</div>
