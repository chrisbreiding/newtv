<script id="search-results-template" type="text/template">
	
	<div id="search-results" class="search-results clearfix">
	
		<h3>Results</h3>
	
		{{ _.each(shows, function (show) { }}
			
			<div class="results-show" data-showid="{{= show.showid }}">
			
				<h4>{{= show.name }}</h4>
				
				<dl>
					
					<dt>Country</dt>
					<dd>{{= show.country }}</dd>
					
					<dt>Started</dt>
					<dd>{{= show.started }}</dd>
				
					<dt>Seasons</dt>
					<dd>{{= show.seasons }}</dd>
				
					<dt>Classification</dt>
					<dd>{{= show.classification }}</dd>
				
				</dl>
				
				<a class="create-show" href="#">Add Show</a>
			
			</div>			
			
		{{ }); }}
		
	</div>
	
</script>