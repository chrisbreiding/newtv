<% content_for(:body_class) { 'login' } %>

<div class="login-container">

  <h2>Please Log In</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="clearfix text-input">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="clearfix text-input">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="clearfix checkbox-input"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div class="clearfix submit"><%= f.submit "Log In" %></div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>

</div>
