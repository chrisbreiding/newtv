body {
	background: #f8f8f8;
	color: #333;
	font-family: 'Helvetica Neue', Arial, sans-serif;
	font-size: 15px;
}

a:link,
a:visited {
	color: #22517D;
	text-decoration: none;
}

a:hover,
a:focus,
a:active {
	color: #22517D;
	text-decoration: underline;
}

a:active {
	-moz-transform: translate(0,1px);
	-o-transform: translate(0,1px);
	-webkit-transform: translate(0,1px);
	transform: translate(0,1px);
}


/* ---- Helper Classes ---- */

.clearfix:before,.clearfix:after { content:""; display:table; }
.clearfix:after { clear:both; }
.clearfix { zoom:1; /* For IE 6/7 */ }


/* ---- Add Show ---- */

a.add-show {
	outline: none;
	overflow: hidden;
	position: absolute;
		top: 5px;
		right: 5px;
	text-decoration: none;
	height: 2em;
}

	.add-show:before {
		content: '+';
		display: block;
		font-size: 2em;
		font-weight: bold;
		text-align: right;
		width: 2em;
		height: 2em;
	}

	a.add-show:hover:before,
	a.add-show:focus:before {
		color: #B4961C;
	}

.add-show-form {
	background: #e3e3e3;
	border-left: solid 1px #d3d3d3;
	border-bottom: solid 1px #d3d3d3;
	padding: 20px;
	position: absolute;
		top: 0;
		right: 0;
	width: 300px;
}

.waiting {
	background: #e3e3e3 url(<%= asset_path('waiting.gif') %>) 50% 50% no-repeat;
	height: 40px;
}

	.add-show-form label {
		position: absolute;
		left: -9999px;
	}
	
	.add-show-form input[type=text] {
		background: #FFF;
		-moz-border-radius: 3px 0 0 3px;
		-webkit-border-radius: 3px 0 0 3px;
		border-radius: 3px 0 0 3px;
		border: solid 1px #c7c7c7;
		border-right: none;
		display: block;
		float: left;
		height: 20px;
		line-height: 20px;
		padding: 5px 10px;
		width: 245px;
	}

	.add-show-form button {
		background: #333 url(<%= asset_path('search.png') %>) no-repeat;
		background: url(<%= asset_path('search.png') %>) no-repeat, -webkit-gradient(linear, left top, left bottom, from(#666), to(#333));
		background: url(<%= asset_path('search.png') %>) no-repeat, -moz-linear-gradient(top, #666, #333);
		-moz-border-radius: 0 3px 3px 0;
		-webkit-border-radius: 0 3px 3px 0;
		border-radius: 0 3px 3px 0;
		border: solid 1px #333;
		display: block;
		float: left;
		text-indent: -9999px;
		width: 32px;
		height: 32px;
	}

	.add-show-form button:hover,
	.add-show-form button:focus {
		background-color: #444;
		background: url(<%= asset_path('search.png') %>) no-repeat, -webkit-gradient(linear, left top, left bottom, from(#777), to(#444));
		background: url(<%= asset_path('search.png') %>) no-repeat, -moz-linear-gradient(top, #777, #444);
	}
	
	.waiting input,
	.waiting button {
		display: none !important;
	}

.search-results {
	background: #e3e3e3;
	border-left: solid 1px #d3d3d3;
	border-bottom: solid 1px #d3d3d3;
	padding: 20px;
	position: absolute;
		top: 0;
		right: 0;
	width: 300px;
}

/* ---- Active Shows ---- */

.show h2 {
	color: #000;
	float: left;
	font-weight: normal;
	margin: 20px 0;
	text-align: right;
	width: 200px;
}

	.show h2 span.name {
		display: block;
	}

	.show h2 span.p-bay {
		display: block;
		float: right;
		margin-top: 20px;
		width: 22px;
	}
	
		.show h2 span a {
			background: url(<%= asset_path('p-bay.png') %>) no-repeat;
			display: block;
			height: 25px;
			outline: none;
			text-align: left;
			text-indent: -9999px;
		}

.show ul {
	float: left;
	list-style: none;
	margin: 20px 0;
	width: 360px;
}

	.show li {
		height: 25px;
		line-height: 25px;
		margin-bottom: 5px;
	}
	
	.aired {
		opacity: 0.5;
	}
	
		.show li span {
			display: block;
			float: left;
		}

		.epnum,
		.airdate {
			margin-right: 20px;
		}
		
		.epnum {
			background: #7E4A22;
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			border-radius: 3px;
			color: #FFF;
			padding: 0 5px;
		}
		
		.airdate {
			color: #7E4A22;
		}
		
		.title {
			position: relative;
		}
		
		.show li .file-name {
			background: #f8f8f8;
			display: none;
			position: absolute;
				left: 0;
				top: 0;
				width: 400px;
		}
		
		.show li .title:hover .file-name {
			display: block;
		}


/* ---- Off Air ---- */

.off-air {
	background: #e3e3e3;
	border-top: solid 1px #d3d3d3;
	margin-top: 20px;
	padding: 10px 20px;
}

