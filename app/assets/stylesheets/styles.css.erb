body {
	background: #e3e3e3;
	color: #333;
	font-family: 'Helvetica Neue', Arial, sans-serif;
	font-size: 14px;
}

.showing-all {
	overflow: hidden;
}

a:link,
a:visited {
	color: #22517D;
	text-decoration: none;
}

a:hover,
a:focus,
a:active {
	color: #22517D;
	text-decoration: underline;
}

a:active {
	-moz-transform: translate(0,1px);
	-o-transform: translate(0,1px);
	-webkit-transform: translate(0,1px);
	transform: translate(0,1px);
}


/* ---- Helper Classes ---- */

.clearfix:before,.clearfix:after { content:""; display:table; }
.clearfix:after { clear:both; }
.clearfix { zoom:1; /* For IE 6/7 */ }


/* ---- Layout ---- */

.main {
	background: #f8f8f8;
	padding-bottom: 20px;
}

.footer {
	background: #e3e3e3;
	border-top: solid 1px #d3d3d3;
	padding: 10px 20px;
}

/* ---- Active Shows ---- */

.main h2 {
	color: #000;
	float: left;
	font-weight: normal;
	margin: 20px 0 0;
	padding-bottom: 5px;
	position: relative;
	text-align: right;
	width: 200px;
}

.showing-all .main h2 {
	opacity: 0.2;
}

.showing-all .active h2 {
	opacity: 1;
}

.main h2:hover {
	z-index: 10;
}

	.main h2 .name {
		display: block;
	}

.main ul,
.all-episodes {
	float: left;
	list-style: none;
	margin: 20px 0;
	padding-left: 20px;
	width: 380px;
}

	.main li,
	.all-episodes li {
		margin-bottom: 5px;
	}
	
		.main li span,
		.all-episodes li span {
			display: block;
			float: left;
		}

		.airdate,
		.title,
		.file-name {
			padding-left: 20px;
		}
		
		.airdate, 
		.title,
		.file-name {
			padding-top: 3px;
			padding-bottom: 3px;
		}
		
		.epnum {
			background: #7E4A22;
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			border-radius: 3px;
			color: #FFF;
			padding: 3px 5px;
		}
		
		.airdate {
			color: #7E4A22;
		}
		
		.title {
			padding-right: 10px;
			position: relative;
		}
		
		.main li .file-name,
		.all-episodes li .file-name {
			background: #f8f8f8;
			display: none;
			padding-right: 10px;
			position: absolute;
				left: 0;
				top: 0;
				width: 400px;
		}
		
		.main li .title:hover .file-name,
		.all-episodes li .title:hover .file-name {
			display: block;
		}

	.aired {
		opacity: 0.5;
	}
	
		.airs-today .epnum {
			-moz-border-radius: 3px 0 0 3px;
			-webkit-border-radius: 3px 0 0 3px;
			border-radius: 3px 0 0 3px;
		}
		
		.airs-today .airdate,
		.airs-today .title,
		.main .airs-today .file-name {
			background: #e3e3e3;
		}
	
		.airs-today .title,
		.main .airs-today .file-name {
			-moz-border-radius: 0 3px 3px 0;
			-webkit-border-radius: 0 3px 3px 0;
			border-radius: 0 3px 3px 0;
		}
		
		.far-future .epnum {
			background: #999;
		}
		
		.far-future .airdate,
		.far-future .title,
		.main .far-future .file-name {
			color: #999;
		}
	



/* ---- Off Air ---- */

.off-air li {
	line-height: 1.5em;
}

	.off-air li > span {
		position: relative;
	}
	
	.off-air li > span:hover {
		z-index: 10;
	}
	

/* ---- All Episodes ---- */

.all-episodes {
	background: #e3e3e3;
	border-left: solid 1px #c7c7c7;
	float: none;
	margin: 0;
	overflow-y: auto;
	padding: 15px 20px 10px;
	position: fixed;
		top: 0;
		left: 210px;
	width: 500px;
}

	.all-episodes li .title:hover {
		color: #e3e3e3;
	}
	
		.all-episodes li .title:hover .file-name {
			background: none;
			color: #333;
		}

/* ---- Options ---- */

.options {
	background: #f8f8f8;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	border: solid 1px #d3d3d3;
	display: none;
	padding: 5px;
	position: absolute;
		top: 100%;
		right: 0;
	width: 95px;
}

.off-air li .options {
	top: -10px;
	right: auto;
	left: 100%;
}

.show h2:hover .options,
.off-air li:hover .options {
	display: block;
}

	.options a {
		background: url(<%= asset_path('sprite.png') %>) no-repeat;
		display: block;
		float: left;
		margin-left: 10px;
		outline: none;
		text-align: left;
		text-indent: -9999px;
		width: 25px;
		height: 25px;
	}
	
	.options a:first-child {
		margin-left: 0;
	}
	
	.options a.p-bay {
		background-position: 0 0;
	}
	
		.options a.p-bay:hover {
			background-position: 0 -25px;
		}
	
	.options a.edit-show {
		background-position: -25px 0;
	}

		.options a.edit-show:hover {
			background-position: -25px -25px;
		}
	
	.options a.show-all-episodes {
		background-position: -50px 0;
	}

		.options a.show-all-episodes:hover {
			background-position: -50px -25px;
		}
	

/* ---- Add Show ---- */

a.add-show {
	outline: none;
	overflow: hidden;
	position: absolute;
		top: 5px;
		right: 5px;
	text-decoration: none;
	height: 2em;
}

	.add-show:before {
		content: '+';
		display: block;
		font-size: 2em;
		font-weight: bold;
		text-align: right;
		width: 2em;
		height: 2em;
	}

	a.add-show:hover:before,
	a.add-show:focus:before {
		color: #B4961C;
	}

.add-show-form {
	background: #e3e3e3;
	border-left: solid 1px #d3d3d3;
	border-bottom: solid 1px #d3d3d3;
	padding: 20px;
	position: absolute;
		top: 0;
		right: 0;
	width: 300px;
}

.waiting {
	background: #e3e3e3 url(<%= asset_path('waiting.gif') %>) 50% 65% no-repeat;
	color: #666;
	height: 60px;
	text-align: center;
}

	.add-show-form label {
		position: absolute;
		left: -9999px;
	}
	
	.add-show-form input[type=text] {
		background: #FFF;
		-moz-border-radius: 3px 0 0 3px;
		-webkit-border-radius: 3px 0 0 3px;
		border-radius: 3px 0 0 3px;
		border: solid 1px #c7c7c7;
		border-right: none;
		display: block;
		float: left;
		height: 20px;
		line-height: 20px;
		padding: 5px 10px;
		width: 245px;
	}

	.add-show-form button {
		background: #333 url(<%= asset_path('search.png') %>) no-repeat;
		background: url(<%= asset_path('search.png') %>) no-repeat, -webkit-gradient(linear, left top, left bottom, from(#666), to(#333));
		background: url(<%= asset_path('search.png') %>) no-repeat, -moz-linear-gradient(top, #666, #333);
		-moz-border-radius: 0 3px 3px 0;
		-webkit-border-radius: 0 3px 3px 0;
		border-radius: 0 3px 3px 0;
		border: solid 1px #333;
		display: block;
		float: left;
		text-indent: -9999px;
		width: 32px;
		height: 32px;
	}

	.add-show-form button:hover,
	.add-show-form button:focus {
		background-color: #444;
		background: url(<%= asset_path('search.png') %>) no-repeat, -webkit-gradient(linear, left top, left bottom, from(#777), to(#444));
		background: url(<%= asset_path('search.png') %>) no-repeat, -moz-linear-gradient(top, #777, #444);
	}
	
	.waiting input,
	.waiting button {
		display: none !important;
	}

.search-results {
	background: #e3e3e3;
	border-left: solid 1px #d3d3d3;
	border-bottom: solid 1px #d3d3d3;
	padding: 20px;
	position: absolute;
		top: 0;
		right: 0;
	width: 300px;
}

	.search-results h3 {
		margin-top: 0;
	}
	
	.results-show {
		border-top: solid 1px #d3d3d3;
		padding-top: 1px;
		position: relative;
	}
	
		.search-results h4 {
			color: #7E4A22;
		}
		
		.search-results dl {
			font-size: .9em;
		}
		
			.search-results dt {
				font-weight: bold;
				float: left;
				width: 110px;
			}
			
			.search-results dd {
				margin-bottom: 5px;
			}
			
		a.create-show {
			background: #7E4A22;
			background: -moz-linear-gradient(top, #7E4A22, #583215);
			background: -webkit-gradient(linear, left top, left bottom, from(#7E4A22), to(#583215));
			-moz-border-radius: 3px;
			-webkit-border-radius: 3px;
			border-radius: 3px;
			border: solid 1px #7E4A22;
			-moz-box-shadow: inset 0 0 2px rgba(255,255,255,0.8);
			-webkit-box-shadow: inset 0 0 2px rgba(255,255,255,0.8);
			box-shadow: inset 0 0 2px rgba(255,255,255,0.8);
			color: #FFF;
			display: block;
			font-size: .7em;
			padding: 6px;
			position: absolute;
				top: 1.33em;
				right: 5px;
			text-decoration: none;
		}
		
			.create-show:before {
				content: '+ ';
			}
			
		a.create-show:hover {
			background: #995D2F;
			background: -moz-linear-gradient(top, #995D2F, #794924);
			background: -webkit-gradient(linear, left top, left bottom, from(#995D2F), to(#794924));
		}
		
.no-search-results p {
	margin-bottom: 0;
}


/* ---- Edit Show ---- */

.edit-show-form {
	background: #e3e3e3;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	border: solid 1px #c7c7c7;
	-webkit-box-shadow: 0 0 10px rgba(0,0,0,0.5);
	-moz-box-shadow: 0 0 10px rgba(0,0,0,0.5);
	box-shadow: 0 0 10px rgba(0,0,0,0.5);
	margin-left: -200px;
	padding: 50px;
	position: fixed;
		top: 50%;
		left: 50%;
	width: 300px;
}

	.edit-show-form label {
		display: block;
		font-weight: bold;
		margin-bottom: 5px;
	}
	
	.edit-show-form input[type=text] {
		background: #FFF;
		-moz-border-radius: 3px;
		-webkit-border-radius: 3px;
		border-radius: 3px;
		border: solid 1px #d3d3d3;
		margin-bottom: 20px;
		padding: 10px;
		width: 280px;
	}
	
	a.delete-show {
		color: #900;
	}
	
	.edit-show-form button {
		background: #333;
		background: -webkit-gradient(linear, left top, left bottom, from(#666), to(#333));
		background: -moz-linear-gradient(top, #666, #333);
		-moz-border-radius: 3px;
		-webkit-border-radius: 3px;
		border-radius: 3px;
		border: solid 1px #333;
		color: #e3e3e3;
		display: block;
		float: right;
		padding: 7px 10px 5px;
	}

	.edit-show-form button:hover,
	.edit-show-form button:focus {
		background: #444;
		background: -webkit-gradient(linear, left top, left bottom, from(#777), to(#444));
		background: -moz-linear-gradient(top, #777, #444);
	}


/* ---- Notices ---- */

.notice {
	border: solid 1px;
	padding: 10px 0;
	position: fixed;
		top: 0;
		left: 0;
	text-align: center;
	width: 100%;
}

	.notice a {
		
	}
	
.message {
	background: #F8F5E8;
	border-color: #726B4A;
	color: #726B4A;
}

.error {
	background: #F8E9E9;
	border-color: #8A3838;
	color: #8A3838;
}

