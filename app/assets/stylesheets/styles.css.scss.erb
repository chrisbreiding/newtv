/* ---- Add Show ---- */

a.add-show {
	outline: none;
	overflow: hidden;
	position: absolute;
		top: 5px;
		right: 5px;
	text-decoration: none;
	height: 2em;

	&:before {
		content: '+';
		display: block;
		font: {
			size: 2em;
			weight: bold;
		}
		text-align: right;
		width: 2em;
		height: 2em;
	}

	&:hover:before,
	&:focus:before {
		color: #B4961C;
	}
}

.add-show-form {
	background: #e3e3e3;
	border: {
		left: solid 1px #d3d3d3;
		bottom: solid 1px #d3d3d3;
	}
	padding: 20px;
	position: absolute;
		top: 0;
		right: 0;
	width: 300px;
}

.add-show-form {
	label {
		position: absolute;
		left: -9999px;
	}

	input[type=text] {
		background: #FFF;
		@include radius(3px 0 0 3px);
		border: solid 1px #c7c7c7;
		border-right: none;
		display: block;
		float: left;
		height: 20px;
		line-height: 20px;
		padding: 5px 10px;
		width: 245px;
	}

	button {
		@include gradient-with-image(#666, #333, #333, url(<%= asset_path('sprite.png') %>) -48px -49px no-repeat);
