	border: solid 1px #d3d3d3;
	display: none;
	padding: 5px;
	position: absolute;
		top: 100%;
		right: 0;
	width: 95px;
}

.off-air li .options {
	top: -10px;
	right: auto;
	left: 100%;
}

.show h2,
.off-air li {
	&:hover .options {
		display: block;
	}
}

.options {
	a {
		background: url(<%= asset_path('sprite.png') %>) no-repeat;
		display: block;
		float: left;
		margin-left: 10px;
		outline: none;
		text: {
			align: left;
			indent: -9999px;
		}
		width: 25px;
		height: 25px;

		&:first-child {
			margin-left: 0;
		}
	}

	a.p-bay {
		background-position: 0 0;

		&:hover {
			background-position: 0 -25px;
		}
	}

	a.edit-show {
		background-position: -25px 0;

		&:hover {
			background-position: -25px -25px;
		}
	}

	a.show-all-episodes {
		background-position: -50px 0;

		&:hover {
			background-position: -50px -25px;
