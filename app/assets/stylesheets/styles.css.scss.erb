		border: solid 1px #333;
		display: block;
		float: left;
		text-indent: -9999px;
		width: 32px;
		height: 32px;

		&:hover,
		&:focus {
			@include gradient-with-image(#777, #444, #444, url(<%= asset_path('sprite.png') %>) -48px -49px no-repeat);
		}
	}
}

